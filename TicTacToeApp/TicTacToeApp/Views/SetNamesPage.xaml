<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToeApp.Views.SetNamesPage">
  <Label Text="First Player Name: " VerticalOptions="Center" HorizontalOptions="Center" />
  <ScrollView>
    <StackLayout Padding="10" Spacing="10">
      <Entry x:Name="player1Name"
                 Placeholder="Player 1 Name 'X'" />
      <Entry x:Name="player2Name"
             Placeholder="Player 2 Name 'O'" />
      <Button x:Name="startButton"
              Text="Start Game"
              BackgroundColor="Green"
              TextColor="White"
              VerticalOptions="Center"/>
    </StackLayout>
  </ScrollView>
</ContentPage>